---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="m-0 p-0 bg-[rgb(230,230,230)]">
		<header class="h-[100px] bg-[rgb(255,234,43)] pt-3">
			<div class="top-header h-1/2 container mx-auto max-w-[1200px] flex justify-center items-center">
				<div class="img ml-0 w-[200px] h-full flex items-center">
					<img src="https://http2.mlstatic.com/frontend-assets/ml-web-navigation/ui-navigation/6.6.73/mercadolibre/logo_large_25years_v2.png" alt="logo mercadolibre" class="w-[120px]">
				</div>
				<div class="buscador flex items-center w-[600px]">
					<input type="text" placeholder="Encuentra lo que quieras acÃ¡" class="w-4/5 h-[40px] rounded-[2px] border border-white outline-none box-border">
					<button type="submit" class="w-[40px] h-[40px] -m-[2px] bg-white border-none rounded-[2px]">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
						</svg>
					</button>
				</div>
				<div class="publicidad w-[400px] flex items-center">
					<img src="/public/Disney.png" alt="">
				</div>
			</div>
			<div class="down-header mx-auto h-1/2 m-0 p-0 max-w-[1200px] flex items-baseline justify-center ">
				<div class="direccion flex items-center w-[200px] ml-0 p-0 h-full">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
						<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
						<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
					  </svg>
					  
					<div class="palabras">
						<p class="-mb-[6px] text-xs">Ingresa tu</p>
						<p>ubicacion</p>
					</div>  
				</div>
				<div class="menu text-sm h-full w-[600px] p-0">
					<a class= "mx-1.5" href="">Categorias</a>
					<div class="top-8 absolute h-40 pt-2 w-28 group-hover:block hidden bg-red-600">
						<div class="size-4 absolute rotate-45 -top-1 left-2  bg-red-600"></div>
					</div>
					<a class= "mx-1.5" href="">Ofertas</a>
					<a class= "mx-1.5" href="">Cupones</a>
					<a class= "mx-1.5" href="">Supermercado</a>
					<a class= "mx-1.5" href="">Moda</a>
					<a class= "mx-1.5" href="">Vender</a>
					<a class= "mx-1.5" href="">Ayuda / PQR</a>
				</div>
				<div class="login flex h-full w-[400px] mr-0 p-0">
					<a class= "mx-1.5" href="">Crea tu cuenta</a>
					<a class= "mx-1.5" href="">Ingresa</a>
					<a class= "mx-1.5" href="">Mis compras</a>
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 mx-2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
					  </svg>					  
				</div>

			</div>
		</header>

		<div class="banner h-[280px] bg-gradient-to-b from-[rgb(255,234,43)] to-[rgb(230,230,230)]"></div>

		<div class="cards container mx-auto max-w-[1200px] flex justify-center gap-5 -mt-[80px] h-[180px]">
			<div class="card flex-grow bg-white rounded-lg">1</div>
			<div class="card flex-grow bg-white rounded-lg">2</div>
			<div class="card flex-grow bg-white rounded-lg">3</div>
			<div class="card flex-grow bg-white rounded-lg">4</div>
			<div class="card flex-grow bg-white rounded-lg">5</div>
			<div class="card flex-grow bg-white rounded-lg">6</div>
		</div>
	</body>
</html>

